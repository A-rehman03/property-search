<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BUTTON STYLE -->
    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/textInverse</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="GradientButton">
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="android:textColor">@color/textInverse</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="OutlineButton">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- INPUT FIELDS -->
    <style name="InputField">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <!-- Material3 Outlined Button style -->
    <style name="Widget.Material3.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Material3 Filled Button style -->
    <style name="Widget.Material3.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
