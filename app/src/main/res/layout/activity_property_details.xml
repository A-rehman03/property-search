<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/backgroundLight">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@android:color/transparent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@android:color/transparent"
                app:navigationIcon="@drawable/ic_back_vector"
                app:titleTextColor="@color/white"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-40dp"
        android:background="@drawable/bg_sheet_top_rounded"
        android:elevation="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title and Location -->
            <TextView
                android:id="@+id/property_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Big Central Villa"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/textSecondary"/>
                    
                <TextView
                    android:id="@+id/property_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4632 Kent Dairy, AL"
                    android:textColor="@color/textSecondary"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Owner Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_user"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#F0F2F5"
                    android:padding="10dp"/>
                    
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Russell Sprout"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member since 2021"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
                
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <!-- Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="24dp"/>
                
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F8F9FB">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Type"
                            android:textColor="@color/textSecondary"/>
                        <TextView
                            android:id="@+id/property_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Villa"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Year built"
                            android:textColor="@color/textSecondary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Living area"
                            android:textColor="@color/textSecondary"/>
                        <TextView
                            android:id="@+id/property_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,592 sqft"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Facilities -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="24dp"/>
                
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="16dp">
                
                <!-- Bedroom -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bed"
                        app:tint="@color/textSecondary"/>
                    <TextView
                        android:id="@+id/tvBedrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 bedrooms"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
                
                <!-- Living Room -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/textSecondary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 living rooms"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
                
                <!-- Bathroom -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bath"
                        app:tint="@color/textSecondary"/>
                    <TextView
                        android:id="@+id/tvBathrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 bathrooms"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
                
                <!-- Kitchen -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_kitchen"
                        app:tint="@color/textSecondary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitchen"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
            </GridLayout>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="8dp"/>
                
            <TextView
                android:id="@+id/property_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curabitur gravida lacinia nunc quis lectus. Maecenas quis pharetra magna, sed dapibus lectus. Mauris vel sapien at tristique fringilla."
                android:textColor="@color/textSecondary"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="80dp"/>
            <TextView
                android:id="@+id/property_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="PKR 0" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="16dp">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChat"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="CHAT"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            app:cornerRadius="28dp"
            android:layout_marginEnd="16dp"/>
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="CALL"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            app:cornerRadius="28dp"/>
    </LinearLayout>

    <!-- Admin Buttons (Hidden by default, can be toggled in code) -->
    <LinearLayout
        android:id="@+id/admin_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_gravity="top|end"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit"
            app:fabSize="mini"
            android:layout_marginEnd="8dp"/>
            
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete"
            app:fabSize="mini"
            app:backgroundTint="@color/errorColor"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
